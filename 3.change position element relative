<body>
    <div class="parent">
        <div class="child1">Child 1 (Relative to Parent)</div>
        <div class="child2">Child 2 (Relative to Itself)</div>
    </div>
</body>body {
    font-family: Arial, sans-serif;
}

.parent {
    position: relative;
    width: 300px;
    height: 200px;
    background-color: lightblue;
    padding: 20px;
    border: 2px solid black;
}

.child1 {
    position: relative;
    top: 30px;
    left: 50px;
    background-color: yellow;
    padding: 10px;
    border: 1px solid black;
}

.child2 {
    position: relative;
    top: 50px;
    left: 20px;
    background-color: orange;
    padding: 10px;
    border: 1px solid black;
}

